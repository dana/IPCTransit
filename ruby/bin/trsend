#!/usr/bin/env ruby
require 'rubygems'
require 'json'
require 'optparse'

require 'ipc_transit'

OptionParser.new do |opts|
    opts.on('-p[OPTIONAL]') do |p|
        $ipc_transit_config_path = p
    end
end.parse!

qname = ARGV[0]
message = JSON.parse(ARGV[1])
dest = ARGV[2]

if dest.nil?
    ret = IPCTransit.send('message' => message, 'qname' => qname)
else
    ret = IPCTransit.send('message' => message, 'qname' => qname, 'd' => dest)
end
puts ret
